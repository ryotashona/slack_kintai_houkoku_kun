# Slack bot token (xoxb-)
SLACK_BOT_TOKEN=

# Slack app-level token for Socket Mode (xapp-)
SLACK_APP_TOKEN=

# Channel ID to monitor (e.g., C0123456789)
TARGET_CHANNEL=

# Comma-separated keywords to identify the anchor message (default: "今日の報告はここに")
TARGET_KEYWORDS=

# Default reply text when posting back to the anchor message
REPLY_TEXT=

# Logging level (DEBUG, INFO, etc.)
LOG_LEVEL=INFO

# Whether to post replies in a thread (true/false)
THREAD_REPLY=true
